<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Login"
    android:background="@color/white">

  <ImageView
      android:id="@+id/logo"
      android:layout_width="@dimen/_200sdp"
      android:layout_height="@dimen/_200sdp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/_20sdp"
      android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_below="@id/logo">
        <ImageView
            android:id="@+id/imgCoffee"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_ice_coffee"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"/>

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_popcorn"
            android:layout_marginTop="@dimen/_20sdp"
            />

        <ImageView
            android:id="@+id/imgOrder"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_order_food"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/courier_prime_regular"
        android:textColor="@color/rhino"
        android:hint="Phone number"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textColorHint="@color/kimberly"
        android:drawablePadding="@dimen/_5sdp"
        android:maxLines="1"
        android:maxLength="40"
        android:drawableStart="@drawable/ic_person_outline_black_24dp"
        android:inputType="number"
        android:layout_above="@id/edtPassword"
        android:layout_marginBottom="@dimen/_10sdp"/>
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/courier_prime_regular"
        android:textColor="@color/rhino"
        android:hint="Password"
        android:maxLength="20"
        android:maxLines="1"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textColorHint="@color/kimberly"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:inputType="textPassword"
        android:layout_above="@id/btn_login"
        android:layout_marginBottom="@dimen/_10sdp"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:layout_above="@id/tv_sign_up"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:text="Login"
        android:textSize="@dimen/_15sdp"
        android:elevation="@dimen/_2sdp"
        android:textColor="@color/kimberly"
        android:layout_marginBottom="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/kimberly"
        android:textSize="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_80sdp"
        android:fontFamily="@font/courier_prime_regular"
        android:text="Create a New Account"/>


    <RelativeLayout
        android:id="@+id/loader"
        android:visibility="gone"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

   <!-- <include
        android:id="@+id/bottomSheet"
        layout="@layout/layout_bottom_sheet_signup_type"/>
-->
</RelativeLayout>
</layout>