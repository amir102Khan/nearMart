<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Profile"
    android:background="#0ED8B51B">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_dummy_user"
            android:layout_gravity="center_horizontal"
            android:id="@+id/profileImage_profile"
            app:civ_border_width="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            app:civ_border_color="@color/black"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name"
                android:fontFamily="@font/courier_prime_bold"
                android:textSize="@dimen/_18sdp"
                android:id="@+id/tv_profile_user_name"
                android:textColor="@color/brown"
                android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:hint="username"
                android:id="@+id/ed_profile_name"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableStart="@drawable/ic_person_outline_black_24dp"
                android:layout_marginTop="@dimen/_50sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:maxLength="90"
                android:fontFamily="@font/courier_prime_regular"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:hint="useremail"
                android:id="@+id/ed_profile_email"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableStart="@drawable/ic_email_black_"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:maxLength="90"
                android:fontFamily="@font/courier_prime_regular"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:hint="phone number"
                android:id="@+id/ed_profile_phone_number"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:maxLength="90"
                android:focusable="false"
                android:fontFamily="@font/courier_prime_regular"/>
            <Button
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/profile_btn"
                android:text="Update"
                android:id="@+id/btn_update_profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:layout_gravity="center_horizontal"/>


</LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/loader"
        android:visibility="gone"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
</layout>